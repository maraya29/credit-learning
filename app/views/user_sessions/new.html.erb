<div class="container">
	<br>
	<br>
	<div class="bs-docs-section">
		<div class="row">
			<div class="col-lg-12">
				<div class="page-header">
					<h1 id="forms"><%= t :login %></h1>
				</div>
			</div>
		</div>
		<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
		<div class="row">
			<div class="col-lg-6">
				<div class="well">
					<form class="bs-example form-horizontal">
						<fieldset>
							<legend>
								<%= t :welcome %>
							</legend>
							<%= render "shared/error_messages", :target => @user_session %>
							<div class="form-group">
								<label for="inputEmail" class="col-lg-2 control-label"><%= t :email %></label>
								<div class="col-lg-10">
									<%= f.text_field :email, :class => 'form-control', :placeholder => t(:email) %>
								</div>
							</div>
							<div class="form-group">
								<label for="inputPassword" class="col-lg-2 control-label"><%= t :password %></label>
								<div class="col-lg-10">
									<%= f.password_field :password, :class => 'form-control', :placeholder => t(:password) %>
								</div>
							</div>
							<div class="form-group">
								<div class="col-lg-10 col-lg-offset-1">
									<%= f.submit t(:login), :class => 'btn btn-primary'%>
								</div>
							</div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>